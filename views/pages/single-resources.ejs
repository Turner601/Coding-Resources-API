<%- include('../partials/header'); %>

<main class="main main-single container text-center">
    <h2 class="main-h2">
        <%= name %>
    </h2>
    <section class="section section-single">
        <figcaption class="figcaption">
            <u>Description:</u> <%= data.description %>
        </figcaption>
        <figcaption class="figcaption">
            <u>URL:</u> <a href="<%= data.url %>">Website Link</a>
        </figcaption>
        <figcaption class="figcaption">
            <u>Types:</u> <% for(let i = 0; i < data.types.length; i++) { %>
                <%= data.types[i] %>
            <% } %>
        </figcaption>
        <figcaption class="figcaption">
            <u>Topics:</u> <% for(let i = 0; i < data.topics.length; i++) { %>
                <%= data.topics[i] %>
            <% } %>
        </figcaption>
        <figcaption class="figcaption">
            <u>Levels:</u> <% for(let i = 0; i < data.levels.length; i++) { %>
                <%= data.levels[i] %>
            <% } %>
        </figcaption>
    </section>
</main>

<%- include('../partials/footer'); %>